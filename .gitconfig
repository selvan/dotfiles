[color]
	ui = auto
[user]
	email = p.thamarai@gmail.com
	name = selvan
[core]
	deltaBaseCacheLimit = 1G
	excludesfile = ~/.gitignore
[push]
	default = simple

[alias]
  st = status
  co = checkout
  br = branch
  up = rebase
  ci = commit
  lol = log --pretty=oneline --abbrev-commit --graph --decorate --all
  sf = show --pretty="format:" --name-only 
  sc = log -p -1
  sa = show
	serve = daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/

[hub]
  protocol = https

[color]
  ui = true

[color "branch"]
  current = yellow black
  local = yellow
  remote = magenta

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red reverse
  new = green reverse
  whitespace = white reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan reverse
  branch = magenta
